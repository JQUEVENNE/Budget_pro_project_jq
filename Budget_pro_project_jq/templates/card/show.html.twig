{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block body %}
    <h1>Card</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ card.name }}</td>
            </tr>
            <tr>
                <th>CreditCardType</th>
                <td>{{ card.creditCardType }}</td>
            </tr>
            <tr>
                <th>CreditCardNumber</th>
                <td>{{ card.creditCardNumber }}</td>
            </tr>
            <tr>
                <th>CurrencyCode</th>
                <td>{{ card.currencyCode }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ card.value }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('card_index') }}">back to list</a>

    <a href="{{ path('card_edit', {'id': card.id}) }}">edit</a>

